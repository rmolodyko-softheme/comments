{
  "name": "comments",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test comments --passWithNoTests",
    "lint": "ng lint",
    "e2e": "ng e2e e2e",
    "watch-e2e": "ng e2e e2e --watch",
    "docs:json": "npx compodoc -p tsconfig.app.json src",
    "docs:generate": "compodoc -p tsconfig.app.json src",
    "docs:run": "compodoc -s",
    "build-storybook": "npm run docs:json && build-storybook",
    "storybook": "npm run docs:json && start-storybook -p 6006",
    "mock:server": "json-server --watch mocks/data.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.0.14",
    "@angular/cdk": "^10.2.7",
    "@angular/common": "~10.0.14",
    "@angular/compiler": "~10.0.14",
    "@angular/core": "~10.0.14",
    "@angular/forms": "~10.0.14",
    "@angular/localize": "~10.0.14",
    "@angular/material": "^10.2.7",
    "@angular/platform-browser": "~10.0.14",
    "@angular/platform-browser-dynamic": "~10.0.14",
    "@angular/router": "~10.0.14",
    "@ng-bootstrap/ng-bootstrap": "^8.0.1",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "@types/clone-deep": "^4.0.1",
    "bootstrap": "^4.5.0",
    "ngx-chips": "^2.2.2",
    "ngx-error-message": "^1.3.0",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.8",
    "@angular/cli": "~10.0.8",
    "@angular/compiler-cli": "~10.0.14",
    "@babel/core": "^7.12.10",
    "@compodoc/compodoc": "^1.1.11",
    "@cypress/browserify-preprocessor": "^2.1.0",
    "@cypress/mocha-teamcity-reporter": "^1.0.0",
    "@cypress/webpack-preprocessor": "^4.0.3",
    "@ngneat/spectator": "^6.1.3",
    "@nrwl/angular": "10.0.1",
    "@nrwl/cypress": "10.0.1",
    "@nrwl/jest": "10.0.1",
    "@nrwl/workspace": "^10.0.1",
    "@storybook/addon-actions": "^6.1.14",
    "@storybook/addon-essentials": "^6.1.14",
    "@storybook/addon-links": "^6.1.14",
    "@storybook/angular": "^6.1.14",
    "@types/cypress": "^1.1.3",
    "@types/jasmine": "^3.6.3",
    "@types/jest": "^26.0.20",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^12.19.12",
    "babel-loader": "^8.2.2",
    "codelyzer": "^6.0.0",
    "cypress": "^6.2.1",
    "husky": "^4.3.0",
    "jasmine": "^3.6.4",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "jest-preset-angular": "^8.3.2",
    "json-server": "^0.16.3",
    "lint-staged": "^10.4.0",
    "ng-lint-staged": "^0.1.6",
    "prettier": "^2.2.1",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --ignore-unknown",
      "ng-lint-staged lint --"
    ],
    "src/**/*.spec.ts": [
      "jest --passWithNoTests "
    ],
    "*.{js,md,html,css,scss}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
